<!-- edit.ejs -->
<div class="modal fade" id="editarModal" tabindex="-1" aria-labelledby="editarModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editarModalLabel">Editar Venta - ID <%= venta.id %>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form action="/edit/<%= venta.id %>" method="post">
                    <div class="form-group">
                        <label for="cantidad_producto">Cantidad</label>
                        <input type="number" name="cantidad_producto" class="form-control"
                            value="<%= venta.cantidad_producto %>" required>
                    </div>
                    <div class="form-group">
                        <label for="sku_producto">SKU</label>
                        <input type="text" name="sku_producto" class="form-control" value="<%= venta.sku_producto %>"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="id_cliente">ID Cliente</label>
                        <input type="number" name="id_cliente" class="form-control" value="<%= venta.id_cliente %>"
                            required>
                    </div>
                    <!-- Agregar aquÃ­ los demÃ¡s campos del formulario -->
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" form="editarForm" class="btn btn-primary">Guardar cambios</button>
            </div>
        </div>
    </div>
</div>